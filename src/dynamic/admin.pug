doctype html
include includes/head.pug
script(src="/assets/js/admin.js")
link(rel="stylesheet" href="/assets/css/table.css")
body
  include includes/nav.pug
  #content
    span.header
        h1 Admin Area
    div.bots-list
        br
        h5 Awaiting Approval
        table.table.table-hover
            thead
                tr
                th(scope='col') No.
                th(scope='col') Prefix
                th(scope='col') Username
                th(scope='col') ID
                th(scope='col') Invite
                th(scope='col') View
                th(scope='col') Approve
                th(scope='col') Deny
            tbody.bots-list-body
                if (bots)
                    each val, i in bots
                        tr
                        td #{i+ 1}
                        td #{val.prefix}
                        td 
                            img.rounded-circle(src=`${val.logo}`, alt="")
                            |      #{val.username}
                        td #{val.botid}
                        td 
                            a.btn.btn-primary(href=`https://discord.com/oauth2/authorize?client_id=${val.botid}&scope=bot&guild_id=${id}&permissions=0`) Invite
                        td 
                            a.btn.btn-primary(href=`/bots/${val.botid}`) View
                        td
                            button.btn.btn-success(onclick=`approve('${val.botid}')`) Approve
                        td
                            button.btn.btn-danger(onclick=`deny('${val.botid}')`) Deny
